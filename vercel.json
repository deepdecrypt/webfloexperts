{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next",
      "config": { 
        "distDir": ".next"
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "frontend/$1" }
  ],
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
}
